@model InstrutorClienteViewModel

<div class="wrapper">

    <link href="~/css/adminhome.css" rel="stylesheet" />
    <div class="body-overlay"></div>


    <!-- Sidebar  -->
    <partial name="_SideMenuAdmin" for="@Model.Usuario" />

    <!-- Page Content  -->
    <div id="content">

        <partial name="_Header" />

        <div class="main-content">

            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="card card-stats">

                        <div class="card-content">
                            <a class="square" href="Exercicio/Create">
                                <img src="~/site-imagens/IcoPrancheta.png" width="100px"><br>
                                <div class="text"><strong>Cadastrar Exercicio</strong></div>
                            </a>
                        </div>

                    </div>
                </div>



                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="card card-stats">

                        <div class="card-content">
                            <a class="square" href="Admin/Cliente/CreateClient">
                                <img src="~/site-imagens/IcoUser.png" width="100px"><br>
                                <div class="text"><strong>Novo Cliente</strong></div>
                            </a>
                        </div>

                    </div>
                </div>



                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="card card-stats bg-teste">

                        <div class="card-content">

                            <a class="square" href="Admin/Cliente">
                                <img src="~/site-imagens/IcoExame.png" width="100px"><br>
                                <div class="text"><strong>CLientes</strong></div>
                            </a>

                        </div>

                    </div>
                </div>
            </div>
        </div>


            <div class="row ">
                <div class="col-lg-12 col-md-12">
                    <div class="card" style="min-height: 585px">
                        <div class="card-header card-header-text">
                            <h4 class="card-title">Olá Instrutor!</h4>
                        <p class="category"><h3>Meus Clientes</h3></p>
                        </div>
                        <div class="card-content table-responsive">


                        @foreach (Cliente Cliente in Model.Clientes)
                        {

                            <div class="cards-cli">
                                <div class="card-cli">
                                    <div class="card-info">
                                        <div class="img-area">
                                            <img src="/site-imagens/user.png" alt="@Cliente.Nome" />
                                        </div>
                                        <div class="card-body">
                                            <div class="card-title-info">@Cliente.Nome</div>
                                            <div class="card-body-info">
                                                <div class="info"><span>Matricula:</span> @Cliente.Matricula</div>
                                                <div class="info"><span>CPF:</span> @Cliente.CPF</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-actions">
                                        <a class="btn btn-success" asp-controller="Instrutor" asp-action="Avaliar" asp-route-cliente="@Cliente.ClienteId" role="button">Avaliacao</a>
                                        <a class="btn btn-success" role="button">Editar Usuário</a>
                                        <a class="btn btn-success" asp-controller="Ficha" asp-action="Create" asp-route-cliente="@Cliente.ClienteId" role="button">Ficha</a>
                                    </div>
                                </div>
                            </div>

                        }

                            

                        </div>
                    </div>
                </div>

            


        </div>

    </div>

</div>




<script>
    let squares = document.querySelectorAll(".square");

    squares.forEach(square => {
        square.addEventListener("click", function () {
            this.classList.toggle("clicked");
        });
    });
</script>







