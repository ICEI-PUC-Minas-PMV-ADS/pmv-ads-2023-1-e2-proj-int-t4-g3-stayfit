@model Treino

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap"
      rel="stylesheet">

<link rel="stylesheet" href="/css/Timer.css">
<div class="wrapper">


    <div class="body-overlay"></div>


    <!-- Sidebar  -->
    <partial name="_SideMenu" />



    <!-- Page Content  -->
    <div id="content">

        <partial name="_Header" />

        <div class="main-content">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">

                    <div class="card" style="min-height: 485px">
                        <div class="card-header card-header-text">
                            <h3 class="card-title">  @Model.Exercicio.Name </h3>
                            <p class="category">
                                <hr />
                            </p>
                          
                        </div>
                        <div class="card-content table-responsive" style="display:flex; align-items:center; justify-content:center">
                            <div class="container-timer">

                                <div class="card-timer">

                                    <div class="card-header">
                                        <h1>@Model.Exercicio.Name</h1>
                                        <div class="card-header-buttons">

                                        
                                        </div>
                                    </div>

                                    <div class="card-body">

                                        <div id="circularProgressBar" class="progress-bar">
                                            <div class="progress-bar-inner">
                                                <h2 class="progress-value">10:00</h2>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="card-footer">

                                        <button class="btn-sucess" onclick="startTimer();">Start</button>
                                        <button class="btn-danger" onclick="stopTimer();">Stop</button>
                                        <button onclick="resetTimer();">Reset</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                         </div>
  <script src="/js/Timer.js"></script>