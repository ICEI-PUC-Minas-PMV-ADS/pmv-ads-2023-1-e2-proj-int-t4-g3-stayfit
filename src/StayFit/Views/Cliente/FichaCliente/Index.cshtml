@model ClienteFichaViewModel

<!-- Sidebar  -->
<partial name="_SideMenu" />



<!-- Page Content  -->
<div id="content">

    <partial name="_Header" />

    <div class="main-content">
        <div class="row ">
            <div class="col-lg-12 col-md-12">
                <div class="card" style="min-height: 485px">
                    <div class="card-header card-header-text">
                        <h2 class="card-title">@Model.cliente.Nome</h2>
                        <p class="category">Matricula: @Model.cliente.Matricula</p>
                    </div>

                    <div class="card-content table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                                 <tr>
                                    <th></th>
                                    <th>Exercício</th>
                                    <th>Repetições</th>
                                    <th>Series</th>
                                </tr>
                            </thead>
                            <tbody>

                                
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Segunda</a>
                                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Terça</a>
                                        <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Quarta</a>
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                        @foreach (Ficha ficha in Model.fichas)
                                        {

                                            if(ficha.DiaSemana == DiaSemana.Segunda){
                                            <div class="card-header card-header-text">
                                                <h4 class="card-title">@ficha.NomeAtividade - @ficha.DiaSemana</h4>
                                            </div>
                                               @* foreach (Treino treino in ficha.Treinos)
                                                {
                                                    <partial name="_Exercicio" for="@treino" />                                               
                                                }*@
                                            }

                                        }
                                    </div>
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">

                                        @foreach (Ficha ficha in Model.fichas)
                                        {

                                            if (ficha.DiaSemana == DiaSemana.Terca)
                                            {
                                            <div class="card-header card-header-text">
                                                <h4 class="card-title">@ficha.NomeAtividade - @ficha.DiaSemana</h4>
                                            </div>
                                                @*foreach (Treino treino in ficha.Treinos)
                                                {
                                                    <partial name="_Exercicio" for="@treino" />
                                                }*@
                                            }

                                        }

                                    </div>
                                    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">

                                        @foreach (Ficha ficha in Model.fichas)
                                        {

                                            if (ficha.DiaSemana == DiaSemana.Quarta)
                                            {
                                            <div class="card-header card-header-text">
                                                <h4 class="card-title">@ficha.NomeAtividade - @ficha.DiaSemana</h4>
                                            </div>
                                                @*foreach (Treino treino in ficha.Treinos)
                                                {
                                                    <partial name="_Exercicio" for="@treino" />
                                                }*@
                                            }

                                        }

                                    </div>
                                </div>

                               
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

