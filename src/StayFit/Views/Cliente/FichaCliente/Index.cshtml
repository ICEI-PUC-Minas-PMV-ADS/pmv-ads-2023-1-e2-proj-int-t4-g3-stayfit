@model ClienteFichaViewModel

<!-- Sidebar  -->
<partial name="_SideMenu" />



<!-- Page Content  -->
<div id="content">

    <partial name="_Header" />

    <div class="main-content">
        <h1>Ficha -- @Model.cliente.Nome</h1>

        <br />

        <div class="row ">
            <div class="col-lg-7 col-md-12">
                <div class="card" style="min-height: 485px">
                    <div class="card-header card-header-text">
                        <h4 class="card-title">Employees Stats</h4>
                        <p class="category">New employees on 15th December, 2016</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="text-primary">
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Salary</th>
                                    <th>Country</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Bob Williams</td>
                                    <td>$23,566</td>
                                    <td>USA</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Mike Tyson</td>
                                    <td>$10,200</td>
                                    <td>Canada</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>Tim Sebastian</td>
                                    <td>$32,190</td>
                                    <td>Netherlands</td>
                                </tr>
                                <tr>
                                    <td>4</td>
                                    <td>Philip Morris</td>
                                    <td>$31,123</td>
                                    <td>Korea, South</td>
                                </tr>
                                <tr>
                                    <td>5</td>
                                    <td>Minerva Hooper</td>
                                    <td>$23,789</td>
                                    <td>South Africa</td>
                                </tr>
                                <tr>
                                    <td>6</td>
                                    <td>Hulk Hogan</td>
                                    <td>$43,120</td>
                                    <td>Netherlands</td>
                                </tr>
                                <tr>
                                    <td>7</td>
                                    <td>Angelina Jolie </td>
                                    <td>$12,140</td>
                                    <td>Australia</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        @foreach(Ficha ficha in @Model.fichas)
        {
            <h1>Treino para: @ficha.NomeAtividade </h1>
            <h2>@ficha.DiaSemana</h2>

            foreach(Treino treino in ficha.Treinos)
            {
               @treino.Exercicio.Name
                <h1>@treino.Series</h1>
            }

        }

      

    </div>
</div>