@model StayFit.Models.Exercicio

<div class="wrapper">


    <div class="body-overlay"></div>

<!-- Sidebar  -->
<partial name="_SideMenu" />



<!-- Page Content  -->
<div id="content">

 <partial name="_Header" />

    <div class="main-content">



                    <div class="row ">
                        <div class="col-lg-6 col-md-12">
                            <div class="card" style="min-height: 485px">
                                <div class="card-header card-header-text">
                            <h3 class="card-title">Adicionar Exerc√≠cio</h3>
                                    <p class="category">                                       
                                        <hr />
                                    </p>
                                </div>
                                <div class="card-content table-responsive">
                          
                                <form asp-action="Create" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" id="nomeExercicio" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    @Html.TextAreaFor(m => m.Description, 10, 10, new { @class = "form-control" })
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Photo" class="control-label"></label>
                                    <input asp-for="Photo" class="form-control" type="file" />
                                    <span asp-validation-for="Photo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Video" class="control-label"></label>
                                    <input asp-for="Video" class="form-control" type="file" id="file-input" accept="video/*" />
                                    <span asp-validation-for="Video" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="GroupMuscle" class="control-label"></label>
                                    <select asp-for="GroupMuscle" class="form-control" asp-items="Html.GetEnumSelectList<GroupMuscle>()"></select>
                                    <span asp-validation-for="GroupMuscle" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TypeExercice" class="control-label"></label>
                                    <select asp-for="TypeExercice" class="form-control" asp-items="Html.GetEnumSelectList<TypeExercice>()"> </select>
                                    <span asp-validation-for="TypeExercice" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                                </div>
                            </form>
                                
                                
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-12">
                            <div class="card" style="min-height: 485px">
                                <div class="card-header card-header-text">
                                    <h4 class="card-title">Preview</h4>
                                </div>
                               
                                <div id="preview"></div>
                                <br />
                                <div id="previewNomeExercicio"></div>
                            </div>
                        </div>
                    </div>



                </div>


            </div>

                                  
</div>


<script src="~/js/Exercicio.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
